@model Auctions.Models.RegisterViewModel

@{
    if (TempData["Error"] != null)
    {
        <p>@TempData["Error"]</p>
    }
}

<h2>Register</h2>
<form asp-action="Register" asp-controller="User" method="post">
    <div class="form-group">
        <span asp-validation-for="username"></span>
        <label asp-for="username"></label>
        <input class="form-control" asp-for="username">
    </div>

    <div class="form-group">
        <span asp-validation-for="password"></span>
        <label asp-for="password"></label>
        <input class="form-control" asp-for="password">
    </div>

    <div class="form-group">
        <span asp-validation-for="pw_confirm"></span>
        <label asp-for="pw_confirm"></label>
        <input class="form-control" asp-for="pw_confirm">
    </div>

    <div class="form-group">
        <span asp-validation-for="first_name"></span>
        <label asp-for="first_name"></label>
        <input class="form-control" asp-for="first_name">
    </div>

    <div class="form-group">
        <span asp-validation-for="last_name"></span>
        <label asp-for="last_name"></label>
        <input class="form-control" asp-for="last_name">
    </div>

    <input type="submit" value="Submit">
</form>